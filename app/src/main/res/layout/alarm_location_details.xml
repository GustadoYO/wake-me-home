<?xml version="1.0" encoding="utf-8"?>

<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  - This layout displays a given alarms's location information and range.                        -
  -                                                                                              -
  - In order to use Android's data binding capabilities, (to avoid having to type findViewById   -
  - over and over again) we wrap this layout in a <layout></layout> tag.                         -
  - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/detail_vertical_padding"
        android:paddingEnd="@dimen/detail_horizontal_padding"
        android:paddingLeft="@dimen/detail_horizontal_padding"
        android:paddingRight="@dimen/detail_horizontal_padding"
        android:paddingStart="@dimen/detail_horizontal_padding"
        android:paddingTop="@dimen/detail_vertical_padding">

        <!-- EditText for alarm human readable location  -->
        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:hint="@string/edit_alarm_location"
            android:paddingBottom="@dimen/detail_vertical_padding"
            android:importantForAutofill="no"
            android:inputType="text" />

        <!-- EditText for alarm latitude -->
        <EditText
            android:id="@+id/latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:hint="@string/edit_alarm_latitude"
            android:paddingBottom="@dimen/detail_vertical_padding"
            android:importantForAutofill="no"
            android:inputType="numberDecimal" />

        <!-- EditText for alarm longitude -->
        <EditText
            android:id="@+id/longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:hint="@string/edit_alarm_longitude"
            android:paddingBottom="@dimen/detail_vertical_padding"
            android:importantForAutofill="no"
            android:inputType="numberDecimal" />

        <!-- EditText for alarm radius -->
        <EditText
            android:id="@+id/radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:hint="@string/edit_alarm_radius"
            android:paddingBottom="@dimen/detail_vertical_padding"
            android:importantForAutofill="no"
            android:inputType="numberDecimal" />

    </LinearLayout>

</layout>