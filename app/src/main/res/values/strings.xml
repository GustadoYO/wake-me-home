<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- - - - - - - - - - - - - - -->
    <!-- Used throughout WakeMeHome-->
    <!-- - - - - - - - - - - - - - -->

    <!--Used in Action Bar, and in AndroidManifest to tell the device the name of this app.-->
    <!--It's good to keep this short, so your launcher icon isn't displayed with "The greatest Wea"-->
    <!--or something similar.-->
    <string name="app_name">WakeMeHome</string>

    <!--By convention, "action" denotes that this String will be used as the label for an Action,-->
    <!--typically from the action bar.  The ActionBar is limited real estate, so shorter is better.-->
    <string name="action_settings" translatable="false">Settings</string>

    <string name="error_message" translatable="false">
        An error has occurred. Please try again by clicking REFRESH
    </string>

    <!-- - - - - - - - - - - - -->
    <!-- Used by DetailActivity-->
    <!-- - - - - - - - - - - - -->

    <string name="action_save" translatable="false">Save</string>
    <string name="mandatory_fields" translatable="false">
        Please select location and radius in order to save the alarm
    </string>

    <!-- This has a unicode character for "..." = "&#8230;" -->
    <string name="edit_alarm_location" translatable="false">Human readable location&#8230;</string>
    <string name="edit_alarm_latitude" translatable="false">Latitude</string>
    <string name="edit_alarm_longitude" translatable="false">Longitude</string>
    <string name="edit_alarm_radius" translatable="false">Radius</string>
    <string name="edit_alarm_enabled" translatable="false">Enabled?</string>
    <string name="edit_alarm_vibrate" translatable="false">Vibrate?</string>
    <string name="edit_alarm_message" translatable="false">None</string>
    <string name="edit_alarm_alert" translatable="false">Alert</string>

    <string name="message_label" translatable="false">Alarm name</string>
    <string name="alert_label" translatable="false">Alarm sound</string>
    <string name="vibrate_label" translatable="false">Vibration</string>

    <string name="open_map_button" translatable="false">Find On Map</string>


    <!-- - - - - - - - - - - -->
    <!-- Used by Preferences -->
    <!-- - - - - - - - - - - -->

    <!-- Label for the length units preference [CHAR LIMIT=30] -->
    <string name="pref_units_label" translatable="false">Length Units</string>

    <!-- Label for metric option in length unit preference [CHAR LIMIT=25] -->
    <string name="pref_units_label_metric" translatable="false">Metric</string>

    <!-- Label for imperial option in length unit preference [CHAR LIMIT=25] -->
    <string name="pref_units_label_imperial" translatable="false">Imperial</string>

    <!-- Key name for length unit preference in SharedPreferences [CHAR LIMIT=NONE] -->
    <string name="pref_units_key" translatable="false">units</string>

    <!-- Value in SharedPreferences for metric length unit option [CHAR LIMIT=NONE] -->
    <string name="pref_units_metric" translatable="false">metric</string>

    <!-- Value in SharedPreferences for imperial length unit option [CHAR LIMIT=NONE] -->
    <string name="pref_units_imperial" translatable="false">imperial</string>


    <!-- - - - - - - - - - - - - - - -->
    <!-- Used by WakeMeHomeUnitsUtils-->
    <!-- - - - - - - - - - - - - - - -->

    <!-- Length format in Kilometres [CHAR LIMIT=5] -->
    <string name="format_length_metres" translatable="false">
        <xliff:g id="length">%1.0f</xliff:g> m
    </string>

    <!-- Length format in Miles [CHAR LIMIT=5] -->
    <string name="format_length_feet" translatable="false">
        <xliff:g id="length">%1.0f</xliff:g> ft
    </string>
    <string name="title_activity_google_maps" translatable="false">Map</string>
    <string name="select_location_button" translatable="false">Select location</string>
    <string name="title_activity_maps" translatable="false">Map</string>

</resources>
